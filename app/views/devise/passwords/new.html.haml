- meta title: t('devise.passwords.new.title')

%h1.sm= t('devise.passwords.new.title')
%p= t('devise.passwords.new.content')

= simple_form_for resource, as: resource_name, url: user_password_url, authenticity_token: true, html: { id: 'password-form' } do
  = component 'myg/form-field', as: :input, attribute: :email, class_name: 'user', floating_label: t('d.email'), input_html: { required: true, type: 'email', autofocus: true }

- replace :footer do
  %p.sm
    = link_to t('devise.passwords.new.try_to_login'), new_user_session_url, class: 'hyperlink--inherit'
  = component 'myg/button', value: t('d.proceed'), form: 'password-form'
