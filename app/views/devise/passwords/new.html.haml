%h1= t 'cd.forgot_your_password?'

= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = f.error_notification

    .form-inputs
        = f.input :email, required: true, autofocus: true, label: t('d.email')

    .form-actions
        = f.button :submit, t('devise.passwords.new.form.submit')

.links
    = render 'devise/shared/links'
