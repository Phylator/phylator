= link_to '', class: 'back preventdefault', onclick: 'history.back();', data: { turbolinks_animate_appear: 'fadein' } do
    = asset 'components/back.svg'



.head-wrapper
    %h2= @quantity.sym
    %p= @quantity.name

.content-wrapper
    %p
        = @quantity.description
        - if @quantity.vector
            = t 'quantities.show.vector'

    %h3= t 'd.pack'
    .cards
        = link_to @quantity.pack.category, class: 'card', data: { turbolinks_animate_animation: 'fadeout' } do
            .wrapper
                %h2.small= @quantity.pack.category.name
                %p.small
                    %span= @quantity.pack.name
            = asset 'components/list/item-open.svg'

    - if @quantity.equations.any?
        %h3= t 'd.p.equations'
        .cards
            - @quantity.equations.each do |equation|
                .card
                    .wrapper
                        = '`' + @quantity.pure_sym + '=' + equation.equation + '`'

    - if @quantity.child_quantities.any?
        %h3= t 'cd.physical_quantities'
        .cards
            - @quantity.child_quantities.with_translations(I18n.locale).order(:name).each do |quantity|
                = link_to quantity, class: 'card', data: { turbolinks_animate_animation: 'fadeout' } do
                    .wrapper
                        %h2.small= quantity.sym
                        %p.small
                            %span= quantity.name
                            - if quantity.vector
                                Â·
                                %span= t 'd.vector'
                    = asset 'components/list/item-open.svg'

    %h3= t 'd.p.units_of_measurement'
    .cards
        - @quantity.unit_of_measurements.with_translations(I18n.locale).order(base: :desc, name: :asc).each do |unit_of_measurement|
            .card{ class: ('highlighted' if unit_of_measurement.base) }
                .wrapper
                    %h2.small= unit_of_measurement.sym
                    %p.small
                        %span= unit_of_measurement.name
