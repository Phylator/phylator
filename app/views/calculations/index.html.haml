%h1= t 'd.p.calculations'

.cards
    - if current_user.calculations.any?
        - current_user.calculations.order('created_at desc').each do |calculation|
            = link_to calculation, class: 'card' do
                .wrapper
                    %h2.small
                        = calculation.result.pretty_value
                        %span= calculation.unit_of_measurement.sym
                    %p.small
                        - if calculation.name.nil? || calculation.name == ''
                            %span= calculation.quantity.name
                        - else
                            %span= calculation.name
                        Â·
                        %span= timeago calculation.created_at
                = asset 'components/list/item-open.svg'
    - else
        = link_to app_root_url, class: 'card', data: { turbolinks_animate_type: 'nav' } do
            .wrapper
                %h3= t 'calculations.index.empty.title'
                %p.small= t 'calculations.index.empty.content'
            = asset 'components/list/item-open.svg'
