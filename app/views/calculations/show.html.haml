- meta title: @constant.name

- replace :back do
    = link_to (current_user ? calculations_url : app_root_url), data: { turbolinks_animate_appear: 'fadein' } do
        %i.nc-icon.nc-tail-left
- replace :tools do
    - unless @calculation.result.undefined
        = link_to 'javascript:void(0)', class: 'clipboard', data: { clipboard: @calculation.result.value.to_s } do
            %i.nc-icon.nc-single-copy-04
    = link_to 'javascript:void(0)', class: 'modalist--trigger' do
        %i.nc-icon.nc-share-26
    - if can?(:destroy, @calculation)
        = link_to calculation_url(@calculation), method: :delete, data: { confirm: 'Deleting this calculation is irreversible. Are you sure?' } do
            %i.nc-icon.nc-trash-round
- replace :title do
    - if @calculation.result.undefined
        %h1.color--error No solution found
    - else
        %h1.sym.clipboard{ data: { clipboard: @calculation.result.value.to_s } }
            = @calculation.result.pretty_value
            %span= @calculation.unit_of_measurement.sym
- replace :subtitle do
    %p
        %span= link_to @calculation.quantity.name, @calculation.quantity, data: { turbolinks_animate_animation: 'fadeout' }
        Â·
        %span= time_ago_in_words @calculation.created_at

- if !current_user && notice
    - replace :section do
        = component 'suggestion', title: 'Store this calculation', content: 'Sign into Phylator to keep your calculations and get access to its big library.' do
            = link_to 'Signup', new_user_registration_url, class: 'myg-button'
            = link_to 'Signin', new_user_session_url, class: 'myg-button myg-button--secondary'

%h3= @calculation.name if @calculation.name
%p= @calculation.description if @calculation.description
- if can? :update, @calculation
    %p= link_to 'Edit name & description' edit_calculation_url(@calculation), class: 'modalist--trigger hyperlink--inherit'

- if @calculation.result.undefined && @calculation.dependencies.any?
    %h2 Missing dependencies
    %p= t 'calculations.show.dependencies.content'
    .myg-grid.myg-wrap--phone
        - @dependencies.each do |index, dependencies|
            - if index > 0
                %hr
            - dependencies.uniq { |obj| obj.quantity_id }.each do |dependency|
                = render dependency.quantity, animation: 'fadeout', link: dependency.quantity.pack.purchased?(current_user)

- if can?(:update, @calculation) && !@calculation.result.undefined
    %h3 Unit conversion
    = simple_form_for @calculation, authenticity_token: true do |f|
        = component 'myg/form-field', as: :input, attribute: :unit_of_measurement_id, class_name: 'calculation', input_html: { required: true, placeholder: 'Choose a unit', class: 'select flexdatalist', data: { data: "/app/quantities/#{@calculation.quantity.id.to_s}/units_of_measurement.json?locale=#{I18n.locale.to_s}", search_in: ['sym', 'name'], text_property: 'sym', visible_properties: ['sym', 'name'], selection_required: 'true', value_property: 'id', min_length: '0' } }

%h2 Measurements
.myg-grid.myg-wrap--phone
    - @measurements.each do |measurement|
        = render measurement, animation: 'fadeout'

- if @constants.any?
    %h2 Constants
    .cards
        - @constants.each do |constant|
            = render constant, animation: 'fadeout'

- if @conditions.any?
    %h2 Conditions
    .myg-list
        - @conditions.each do |condition|
            .myg-list--item
                %p= condition

- if @equations.any?
    %h2 Equations
    .cards
        - @equations.each do |equation|
            = render equation, animation: 'fadeout'

%h2 Unit
.myg-grid.myg-wrap--phone
    = render @calculation.unit_of_measurement, animation: 'fadeout'








