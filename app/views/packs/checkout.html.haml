= component 'modalist', title: t('packs.checkout.title', pack: @pack.name) do
    = component 'modalist/closer'

= form_tag purchases_url(pack: params[:pack_id], receipt_email: current_user.email), method: :post do
    %input{ type: 'hidden', name: 'stripeToken' }
    #card-element
    #card-errors{ role: 'alert' }
    .myg-button--container.flex.reverse
        = component 'myg/button', value: t('packs.checkout.buy', price: number_to_currency(@pack.price, unit: '$'))
