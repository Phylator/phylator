- meta title: "#{@pack.category.name}/#{@pack.name}"

- replace :title do
    %h1= @pack.name
- replace :subtitle do
    %p= @pack.category.name

- unless @pack.purchased? current_user
    - replace :section do
        %section
            = link_to t('packs.show.buy', price: number_to_currency(@pack.price, unit: '$')), pack_checkout_url(@pack), class: 'myg-button modalist--trigger'

%p= @pack.description

- if @quantities.any?
    %h2 Quantities
    .myg-grid.myg-wrap--phone
        - @quantities.each do |quantity|
            = render quantity, animation: 'fadeout', link: @pack.purchased?(current_user)

- if @constants.any?
    %h2 Constants
    .myg-grid.myg-wrap--phone
        - @constants.each do |constant|
            = render constant, animation: 'fadeout', link: @pack.purchased?(current_user)



